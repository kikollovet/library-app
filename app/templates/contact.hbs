<h1>Contact Page</h1>
<h4>Get in touch with us</h4>
<form class="form-horizontal">
    <div class="form-group">
        <div class="col-md-4">
            {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            {{textarea class="form-control" value=message placeholder="Your message. (At least 5 characters.)" rows="7"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <button class="btn btn-primary btn-block" disabled={{isDisabled}} {{action 'sendContactMessage' model}}>Send message</button>
        </div>
    </div>
</form>
<div>
    {{#if confirmationMessage}}
        <div class="alert alert-success col-md-4">{{confirmationMessage}}</div>
    {{/if}}
</div>