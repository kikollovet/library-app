<h1>LOGIN</h1>

<form class="form-horizontal">
    <div class="form-group">
        <div class="col-md-4">
            {{input id="emailField" type="email" value=email class="form-control" placeholder="Please type your e-mail address." }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            {{input id="passwordField" type="password" value=password class="form-control" placeholder="Please type your password" }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <button id="submitButton" class="btn btn-primary" {{action "login"}}>Sign in</button>
        </div>
    </div>
    {{#if errorLogin}}
        {{errorLogin}}
    {{/if}}
</form>