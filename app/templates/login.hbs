<h1>LOGIN</h1>

<form class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4">
                {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." }}
                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5">
                {{input type="password" value=model.password class="form-control" placeholder="Please type your password" }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <button class="btn btn-primary" {{action "login" model}}>Sign in</button>
            </div>
        </div>
        {{#if session.erro}}
        {{session.erro}}
        {{/if}}
    </form>